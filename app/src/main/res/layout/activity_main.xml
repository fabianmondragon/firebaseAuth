<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usuario.hellowordl.MainActivity"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:layout_weight="1"
        android:text="Aplicación de prueba"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="2dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/squareLogin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Ingrese su correo electronico:"/>

            <EditText
                android:id="@+id/edtTextUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="example@gmail.com"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Ingrese su contraseña:"/>
            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <Button
                android:id="@+id/btnIngresar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button"
                android:text="Ingresar"
                android:textColor="@color/letterButton"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <View
                android:layout_marginTop="20dp"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="8"
                android:background="@android:color/darker_gray"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="11sp"
                android:text="Or connect with"/>
            <View
                android:layout_marginTop="20dp"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="8"

                android:background="@android:color/darker_gray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:padding="10dp"
            >

            <Button

                 android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:background="@drawable/button_facebook"
                android:text="Facebook"
                android:layout_marginRight="20dp"
                android:textSize="11sp"
                android:textColor="@color/letterButton"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:background="@drawable/button_google"
                android:text="Google"
                android:textSize="11sp"
                android:textColor="@color/letterButton"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not a member yet"
                android:layout_above="@+id/txtViewRegistrar"
                android:layout_centerHorizontal="true"
                android:textColor="@color/letterMain"

                />
            <TextView

                android:id="@+id/txtViewRegistrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:text="register"
                android:layout_centerHorizontal="true"
                android:clickable="true"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
